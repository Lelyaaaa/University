import java.math.*;
public class Task2
{
    public static void main(String[] args)
    {
        Task2();
    }
    public static void Task2()
    {
        final double ROUBLES_PER_YUAN = 11.91;
        int yuan;
        double roubles;
        Scanner input = new Scanner(System.in);
        System.out.print("Введите сумму юаней: ");
        yuan = input.nextInt();
        roubles = ROUBLES_PER_YUAN * yuan;
        String word = switch (yuan % 10) {
            case 1 -> " китайский юань";
            case 2, 3, 4 -> " китайских юаня";
            default -> " китайских юаней";
        };

        if ((yuan / 10) % 10 == 1) {word = " китайских юаней";}
        System.out.print(yuan + word + " = " + Math.ceil(roubles) + " российских рублей.");
    };

}
